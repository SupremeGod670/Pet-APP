<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BACKGROUND"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        style="@style/BACKGROUNDGRADIENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="850dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/criarpet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/the_seasons_regular"
            android:text="@string/criar_pet"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/texto_criar_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="@font/the_seasons_regular"
            android:text="@string/crie_o_seu_pet_aqui"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <TextView
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/voltar"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-34dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/perfilpet"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/screen_background_light_transparent"
                android:src="@drawable/petpaw" />

            <TextView
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/informacoes_do_pet"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nome"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/nome_do_pet"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editnome"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/nome"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/nascimento"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/nascimento"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editnascimento"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/nacsimento_dd_mm_aaaa"
                android:inputType="number" />

            <TextView
                android:id="@+id/especie"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/especie"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/editespecie"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:entries="@array/especie" />

            <TextView
                android:id="@+id/raca"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/racac"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/editraca"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background" />

            <TextView
                android:id="@+id/sexo"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/sexo"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/editsexo"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:entries="@array/sexo" />

            <TextView
                android:id="@+id/pai"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/pai"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editpai"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/pai_nome_do_pai_do_pet"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/mae"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/mae"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editmae"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/mae_nome_da_mae_do_pet"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/naturalidade"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/naturalidade"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editnaturalidade"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/naturalidade_criciuma"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/cor"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/cor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editcor"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/cor_dourado"
                android:inputType="textCapWords" />

            <TextView
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="18dp"
                android:text="@string/informacoes_do_dono_do_pet"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cep"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/cep"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editcep"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/cep_00000_000"
                android:inputType="number" />

            <TextView
                android:id="@+id/estado"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/estado"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/editestado"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:entries="@array/estado" />

            <TextView
                android:id="@+id/cidade"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/cidade"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/editcidade"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background" />

            <TextView
                android:id="@+id/endereco"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/endereco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editendereco"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/endereco_rua_tal"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/bairro"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/bairro"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editbairro"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/bairro_tal"
                android:inputType="textCapWords" />

            <TextView
                android:id="@+id/tel"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/tel_resd"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edittel"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/tel_resd_48_99999_9999"
                android:inputType="number" />

            <TextView
                android:id="@+id/email"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editemail"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/email_nome_exemplo_gmail_com"
                android:inputType="text" />

            <TextView
                android:id="@+id/cel"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="@string/tel_cel"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editcel"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:hint="@string/tel_cel_48_99999_9999"
                android:inputType="number" />

            <TextView
                android:id="@+id/descricao"
                style="@style/TEXTLINEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:text="@string/descricao"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editdescricao"
                style="@style/HINTCOLOR"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@android:drawable/editbox_background"
                android:inputType="textCapWords" />

            <Button
                android:id="@+id/salvarpet"
                style="@style/BUTTON"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="12dp"
                android:text="@string/salvar_pet"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>