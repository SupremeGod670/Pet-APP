<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_edit_text"
    android:backgroundTint="@color/white"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header com nome e tipo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nome da Clínica"
            android:textColor="@color/my_dark_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:backgroundTint="@color/my_light_primary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Clínica"
            android:textColor="@color/my_dark_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_emergencia"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/syringe"
            android:visibility="gone"
            app:tint="@color/red" />

    </LinearLayout>

    <!-- Avaliação e especialidades -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_avaliacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 4.5"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_especialidades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Vacinação, Consultas, Cirurgias"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Endereço -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/info"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_endereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Endereço da clínica"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Horário -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/info"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_horario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Segunda à Sexta: 8h às 18h"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Telefone e ações -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/info"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_telefone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="(48) 3431-0000"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <!-- Botão ligar -->
        <ImageView
            android:id="@+id/iv_telefone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_edit_text"
            android:backgroundTint="@color/my_light_primary"
            android:padding="6dp"
            android:src="@drawable/info"
            app:tint="@color/my_dark_primary" />

        <!-- Botão Maps -->
        <ImageView
            android:id="@+id/iv_maps"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_edit_text"
            android:backgroundTint="@color/my_light_primary"
            android:padding="6dp"
            android:src="@drawable/info"
            app:tint="@color/my_dark_primary" />

    </LinearLayout>

</LinearLayout>