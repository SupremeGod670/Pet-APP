<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#4CAF50"
    android:padding="16dp">

    <!-- Título com bordinha de patinhas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🐾 REPÚBLICA FEDERATIVA DOS ANIMAIS 🐾"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Card principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#E8F5E8"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Cabeçalho -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BRASIL\nCARTEIRA DE IDENTIDADE ANIMAL"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Container da foto e patinhas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Área da foto -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#C8E6C9"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/pet_photo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="#FFFFFF"
                        android:padding="4dp"
                        android:src="@drawable/ic_launcher_background"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PARA DIREITA"
                        android:textSize="8sp"
                        android:textColor="#666"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <!-- Área das patinhas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#4CAF50">

                    <!-- Patinhas aqui - você pode usar ImageViews ou desenhar -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐾"
                        android:textSize="40sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐾"
                        android:textSize="30sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🐾"
                        android:textSize="35sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Linha para assinatura -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#666"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assinatura do titular"
                android:textSize="10sp"
                android:textColor="#666"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bordinha de patinhas inferior -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾🐾"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>