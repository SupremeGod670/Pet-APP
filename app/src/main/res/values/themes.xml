<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PetAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/my_light_primary</item>
    </style>
    
    <style name="BACKGROUND">
        <item name="android:background">@color/my_light_primary</item>
    </style>

    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HINTCOLOR">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:itemTextAppearance">@color/black</item>
    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">@color/my_dark_primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LINK">
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="SEARCHCOLOR">
        <item name="android:backgroundTint">#A8A8A8</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="TEXTLINEAR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PERFIL">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="BUTTONSAIR">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.PetAPP" parent="Base.Theme.PetAPP" />
</resources>